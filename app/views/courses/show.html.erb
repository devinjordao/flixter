<br />

<div class="booyah-box col-10 offset-1">
  <h1><%= @course.title %></h1>
  <br />
  <%= image_tag @course.image_url.to_s, class: 'img-fluid' %>
  <br />
  <br />
  <div class="row">
    <div class="col-sm-4 text center">
      <span class="badge badge-default">
        <%= number_to_currency @course.cost %>
      </span>
    </div>
      <% if current_user && current_user == @course.user %>
    <div class="col">
      <%= link_to 'Administrater', instructor_course_path(@course), class: 'btn btn-danger btn large float-right' %>
    </div>
    <% end %>

    <div class="col-sm-8 col-12">
      <%= @course.description %>
    </div>
  </div>

  <div class="col-12">
    <% @course.sections.each do |section| %>
      <div class="section">
        <%= section.title %>
        <% section.lessons.each do |lesson| %>
          <div class="lesson">
            <%= link_to lesson_path(lesson) do %>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
